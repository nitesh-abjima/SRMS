@model StudentResultModel

<div class="row">
    <div class="col">
        <div class="card mt-4">
            <div class="card-header">
                <h2>Student Details</h2>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>Roll No:</th>
                        <td>@Model.RollNo</td>
                    </tr>
                    <tr>
                        <th>Name:</th>
                        <td>@Model.StudentName</td>
                    </tr>
                    <tr>
                        <th>Class:</th>
                        <td>@Model.Class</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col">
        @if (Model.HasResult)
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h2>Result</h2>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>Subject</th>
                            <th>Marks</th>
                        </tr>
                        <tr>
                            <td>Maths</td>
                            <td>@Model.Maths</td>
                        </tr>
                        <tr>
                            <td>English</td>
                            <td>@Model.English</td>
                        </tr>
                        <tr>
                            <td>Science</td>
                            <td>@Model.Science</td>
                        </tr>
                        <tr>
                            <td>History</td>
                            <td>@Model.History</td>
                        </tr>
                        <tr>
                            <th>Total Marks:</th>
                            <th>@Model.Marks Out of 400</th>
                        </tr>
                        <tr>
                            <th>Percentage:</th>
                            <th>@Model.Percentage%</th>
                        </tr>
                        <tr>
                            <th>Decision:</th>
                            <th>@Model.Decision</th>
                        </tr>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h2>No result found</h2>
                </div>
                <div class="card-body">
                    <p>No result found for this student.</p>
                </div>
            </div>
        }
    </div>
</div>
