
@model StudentResultModel

<div class="card">
    <div class="card-header">
        <h2>Student Details</h2>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Roll No:</th>
                <td>@Model.RollNo</td>
            </tr>
            <tr>
                <th>Name:</th>
                <td>@Model.StudentName</td>
            </tr>
            <tr>
                <th>Class:</th>
                <td>@Model.Class</td>
            </tr>
        </table>
    </div>
</div>

@if (Model != null)
{
    <div class="card mt-4">
        <div class="card-header">
            <h2>Result</h2>
        </div>
        <div class="card-body">
            <table class="table">
                <tr>
                    <th>Subject</th>
                    <th>Marks</th>
                </tr>
                <tr>
                    <td>Maths</td>
                    <td>@Model.Maths</td>
                </tr>
                <tr>
                    <td>English</td>
                    <td>@Model.English</td>
                </tr>
                <tr>
                    <td>Science</td>
                    <td>@Model.Science</td>
                </tr>
                <tr>
                    <td>History</td>
                    <td>@Model.History</td>
                </tr>
                <tr>
                    <th>Total Marks:</th>
                    <th>@Model.Marks</th>
                </tr>
                <tr>
                    <th>Percentage:</th>
                    <th>@Model.Percentage%</th>
                </tr>
                <tr>
                    <th>Decision:</th>
                    <th>@Model.Decision</th>
                </tr>
            </table>
        </div>
    </div>
}
else
{
    <div class="card mt-4">
        <div class="card-body">
            <p>No result found for this student.</p>
        </div>
    </div>
}


