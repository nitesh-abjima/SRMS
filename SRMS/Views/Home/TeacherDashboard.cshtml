@model IEnumerable<SRMS.Models.Student>

@{
    ViewData["Title"] = "TeacherDashboard";
}

<h1>TeacherDashboard</h1>

@*<p>
    <a asp-action="CreateStudent">Add Student</a>
</p>*@
<button type="button" class="btn btn-primary" style="float:right" onclick="location.href='@Url.Action("CreateStudent")'">Add Student</button>
<button type="button" class="btn btn-primary" style="float:right; margin-right: 5px" onclick="location.href='@Url.Action("Result")'">Result</button>

<table class="table table-responsive table-border ">
    <thead>
        <tr class="table-active table-dark">
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RollNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DOB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new {@class="btn btn-info"})
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new {@class="btn btn-danger"})
                        @*@Html.ActionLink("Result", "Result", new { id=item.Id  })*@
                    </td>
                </tr>
            }   
        }

        else
        {
            <tr>
                <td colspan="5">
                    <div>
                        No data available at this moment!
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
