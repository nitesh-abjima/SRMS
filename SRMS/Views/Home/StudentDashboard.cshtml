@{
    ViewData["Title"] = "Student Dashboard";
}

<h3 class="text-center">Check your result here</h3>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <form method="get" action="@Url.Action("GetStudentResult", "StudentResult")">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="rollNo">Roll Number:</label>
                        <input type="text" class="form-control" id="rollNo" name="rollNo" placeholder="Enter roll no." required>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Check Result</button>
                </form>
            </div>
        </div>
    </div>
</div>
